{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2020"],
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
  },
  "exclude": ["node_modules", "dist"]
}
